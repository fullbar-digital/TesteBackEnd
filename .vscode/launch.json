{
    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Core Launch (web)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/src/TesteBackEnd.Application/bin/Debug/net6.0/TesteBackEnd.Application.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/TesteBackEnd.Application",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development",
                "SqlServer": "Persist Security Info=False;User ID=sa; Password=L30&t4t4; Initial Catalog=TesteBackEnd;Data Source=localhost;"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach"
        },
        {
            "name": "Docker .NET Core Launch",
            "type": "docker",
            "request": "launch",
            "preLaunchTask": "docker-run: debug",
            "netCore": {
                "appProject": "${workspaceFolder}/src/TesteBackEnd.Application/TesteBackEnd.Application.csproj"
            }
        }
    ]
}
